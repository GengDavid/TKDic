<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:elevation="10dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/navigation_bar"
        android:elevation="5dp"
        android:background="@color/White"
        >
        <ImageView
            android:id="@+id/navigation_bar_home"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/navigation_bar_folder"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:src="@drawable/home_color"
            />
        <ImageView
            android:id="@+id/navigation_bar_folder"
            android:layout_width="75dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/navigation_bar_home"
            app:layout_constraintRight_toLeftOf="@id/navigation_bar_privatecollect"
            android:src="@drawable/folder"
            />
        <ImageView
            android:id="@+id/navigation_bar_privatecollect"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/navigation_bar_folder"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/privatecollect"
            />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/navigation_bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/upward_shadow" />

</android.support.constraint.ConstraintLayout>